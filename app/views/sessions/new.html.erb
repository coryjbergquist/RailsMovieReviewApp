<h1>Login</h1>

<% if flash[:notice] %>
   <div><font color="red"><%= flash[:notice] %><%= link_to "create new user", new_user_path %></font></div>
 <% end %>
 
<%= form_for @user, url: {controller: "sessions", action: "create"}  do |f| %>
  <%= f.label 'name' %>
  <%= f.text_field 'name', placeholder: "enter username" %>
  <%= f.label 'password' %>
  <%= f.text_field 'password', placeholder: "enter password" %>
  <%= f.submit 'login' %>
  <% end %>
  <br>
  or
  <p><%= link_to('Log in with Facebook!', '/auth/facebook') %></p>
