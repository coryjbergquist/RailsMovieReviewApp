<h1>Login</h1>

<% if flash[:notice] %>
   <div><font color="red"><%= flash[:notice] %><%= link_to "create new user", new_user_path %></font></div>
 <% end %>

<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>
  <%= label_tag 'name' %>
  <%= text_field_tag 'name' %>
  <%= label_tag 'password' %>
  <%= text_field_tag 'password' %>
  <%= submit_tag 'login' %>
  <% end %>
  <br>
  or
  <p><%= link_to('Log in with Facebook!', '/auth/facebook') %></p>
