<!DOCTYPE html>
<html>
<head>
  <%= javascript_include_tag "reviews" %>
</head>

<body>


  <h3>Make a new review for <%= @movie.title %></h3>



  <%= form_for [@movie, @review], html: {movieId: @movie.id} do |f| %>
    <div class="field">
      <%= hidden_field_tag 'hidden', @movie.id  %>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :content %><br>
      <%= f.text_field :content %>
    </div>
    <div class="field">
      <%= f.label :rating %>
      <%= f.select :rating, (1..5) %>
    </div>
    <div class="actions">
      <%= f.submit 'Submit', id: "sub" %>

    </div>
  <% end %>

  <div id="postResult">
    <h1 id="movieTitle"></h1>
    <h2 id="reviewTitle"></h2>
    <p id="reviewContent"></p>
    <p id="reviewRating"></p>
  </div>




</body>
</html>
