<h3>Make a new review for <%= @movie.title %></h3>

<%= form_for [@movie, @review] do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.label :rating %>
  <%= f.select :rating, (1..5) %>
  <%= f.submit "Create Review" %>
<% end %>
