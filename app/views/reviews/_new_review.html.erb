<h1>Create your review for <%= @movie.title %></h1>

<%= form_for @review, :url => url_for(:controller => 'movie_reviews', :action => 'update') do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.label :rating %>
  <%= f.select :rating, (1..5) %>
  <%= f.submit "Submit" %>
<% end %>
